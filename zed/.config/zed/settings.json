{
  "vim_mode": true,
  "cursor_shape": "bar",
  "vertical_scroll_margin": 5,
  "restore_on_startup": "none",
  "autosave": "on_focus_change",
  "show_edit_predictions": true,

  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "relative_line_numbers": "enabled",
  "icon_theme": "Material Icon Theme",
  "buffer_font_family": "FiraCode Nerd Font",

  "minimap": { "show": "never" },
  "terminal": { "font_size": 16.0 },

  "theme": {
    "mode": "system",
    "light": "GitHub Light",
    "dark": "GitHub Dark"
  },

  "vim": {
    "use_system_clipboard": "always"
  },

  "file_types": {
    "dotenv": [".env*"]
  },

  "languages": {
    "Zig": {
      "formatter": {
        "language_server": {
          "name": "zls"
        }
      }
    },

    "Kotlin": {
      "language_servers": ["kotlin-lsp"],
      "formatter": {
        "external": {
          "command": "ktfmt",
          "arguments": ["--kotlinlang-style", "-"]
        }
      }
    },

    "Gleam": {
      "formatter": {
        "language_server": {
          "name": "gleam"
        }
      }
    },

    "Python": {
      "language_servers": ["ty", "!basedpyright"],
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"]
        }
      }
    },

    "Solidity": {
      "formatter": {
        "external": {
          "command": "forge",
          "arguments": ["fmt", "--raw", "-"]
        }
      }
    }
  }
}
