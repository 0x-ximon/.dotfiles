{
  // Core settings
  "git.autofetch": true,
  "keyboard.dispatch": "keyCode",
  "extensions.autoUpdate": false,
  "chat.commandCenter.enabled": false,
  "files.autoSave": "onFocusChange",
  "terminal.integrated.fontSize": 16,
  "search.searchEditor.focusResultsOnSearch": true,

  "editor.fontSize": 16,
  "editor.fontWeight": "bold",
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.inlayHints.enabled": "off",

  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.fontFamily": "'FiraCode Nerd Font'",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },

  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": []
  },

  "window.restoreWindows": "none",
  "window.menuBarVisibility": "toggle",
  "window.autoDetectColorScheme": true,

  "workbench.panel.showLabels": false,
  "workbench.activityBar.location": "top",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.navigationControl.enabled": false,
  "workbench.preferredDarkColorTheme": "GitHub Dark Default",
  "workbench.preferredLightColorTheme": "GitHub Light Default",

  // Keymaps settings
  "vim.normalModeKeyBindings": [
    // General Keymaps
    {
      "before": ["U"],
      "after": ["<C-r>"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["J"],
      "after": ["}"]
    },
    {
      "before": ["K"],
      "after": ["{"]
    },

    // Layout Keymaps
    {
      "before": ["<leader>", "_"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["<leader>", "|"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    {
      "before": ["<leader>", "("],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", ")"],
      "commands": ["workbench.action.toggleAuxiliaryBar"]
    },

    // Quick Keymaps
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },

    // QoL Keymaps
    {
      "before": ["<leader>", "<space>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "."],
      "commands": ["workbench.action.createTerminalEditor"]
    },
    {
      "before": ["<leader>", "~"],
      "commands": ["workbench.files.action.focusFilesExplorer"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["workbench.action.quickTextSearch"]
    },
    {
      "before": ["<leader>", "%"],
      "commands": ["workbench.scm.focus"]
    },
    {
      "before": ["[", "<tab>"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["]", "<tab>"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["<leader>", "<tab>", "n"],
      "commands": ["workbench.action.files.newUntitledFile"]
    },

    // LSP Keymaps
    {
      "before": ["?"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["!"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["g", "e"],
      "commands": ["editor.action.revealDeclaration"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["<leader>", "l", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "l", "f"],
      "commands": ["editor.action.format"]
    },
    {
      "before": ["<leader>", "l", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },

    // Plugin Keymaps
    {
      "before": ["-"],
      "commands": ["oil-code.open"]
    },
    {
      "before": ["<CR>"],
      "commands": ["oil-code.select"]
    }
  ],

  // Extensions settings
  "vim.leader": "<space>",
  "oil-code.hasNerdFont": true,
  "vim.useSystemClipboard": true,
  "oil-code.disableVimKeymaps": true,
  "dotenv.enableAutocloaking": false,

  "haskell.manageHLS": "PATH",
  "solidity.formatter": "forge",
  "biome.suggestInstallingGlobally": false,
  "python.analysis.typeCheckingMode": "standard",
  "excalidraw.theme": "auto",
  "svelte.enable-ts-plugin": true,

  "files.associations": {
    ".env*": "dotenv"
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "mdx": false
  },

  "better-comments.tags": [
    {
      "tag": "TODO",
      "color": "#2563EB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "BUG",
      "color": "#DC2626",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "WARN",
      "color": "#FBBF24",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "INFO",
      "color": "#10B981",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "TEST",
      "color": "#7C3AED",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "PERF",
      "color": "#FF00FF",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],

  // Language Specific Settings
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[haskell]": {
    "editor.defaultFormatter": "haskell.haskell"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.wordWrap": "on"
  },
  "[sql]": {
    "editor.defaultFormatter": "ms-ossdata.vscode-pgsql"
  },
  "[yaml]": {
    "diffEditor.ignoreTrimWhitespace": true
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "codeium.enableConfig": {
    "*": true,
    "postcss": true,
    "markdown": true
  }
}
