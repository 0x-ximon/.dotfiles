{
  // Core settings
  "git.autofetch": true,
  "files.autoSave": "onFocusChange",
  "settingsSync.ignoredExtensions": [],

  // Editor settings
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.fontFamily": "Fira Code",
  "editor.lineNumbers": "relative",
  "editor.cursorStyle": "underline",

  "editor.inlineSuggest.enabled": true,
  "editor.unicodeHighlight.allowedCharacters": {
    "Õ•": true
  },
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Window settings
  "window.confirmBeforeClose": "always",

  // Workbench settings
  "workbench.colorTheme": "Brogrammer",
  "workbench.iconTheme": "vscode-icons",
  "workbench.panel.defaultLocation": "right",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.colorCustomizations": {
    "statusBar.background": "#1A1A1A",
    "statusBar.noFolderBackground": "#1E90FF",
    "statusBar.debuggingBackground": "#00ff00",
    "[Brogrammer]": {
      "editor.background": "#000000",
      "sideBar.background": "#111111",
      "statusBar.background": "#1A1A1A",
      "activityBar.background": "#000000",
      "statusBar.noFolderBackground": "#1E90FF",
      "statusBar.debuggingBackground": "#00ff00"
    }
  },

  // Terminal settings
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font, Fira Code",
  "terminal.integrated.commandsToSkipShell": ["language-julia.interrupt"],

  // Language specific settings
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },

  "[sql]": {
    "editor.defaultFormatter": "ms-mssql.mssql"
  },

  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },

  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true
  },

  "[julia]": {
    "editor.defaultFormatter": "julialang.language-julia"
  },

  "[dart]": {
    "editor.formatOnSave": true,
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,

    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },

  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[css]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[solidity]": {
    "editor.defaultFormatter": "NomicFoundation.hardhat-solidity"
  },

  // Extensions settings
  // -- Languages
  "go.gopath": "~/.go",
  "solidity.telemetry": true,
  "julia.enableTelemetry": true,
  "html.format.wrapLineLength": 80,
  "css.enabledLanguages": ["html"],

  "julia.symbolCacheDownload": true,
  "Lua.diagnostics.globals": ["vim"],
  "rust-analyzer.lens.implementations.enable": false,

  // -- Vim settings
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],

  // -- Utilities
  "extensions.autoUpdate": false,
  "redhat.telemetry.enabled": true,
  "gitlens.codeLens.enabled": false,
  "liveServer.settings.donotVerifyTags": true,
  "github.copilot.inlineSuggest.enable": true,

  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": true
  },
  "grammarly.files.include": [
    "**/*.md",
    "**/readme.md",
    "**/README.md",
    "**/*.txt"
  ]
}
