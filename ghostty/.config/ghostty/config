# UI
font-size = 14
bold-color = bright
font-family = FiraCode Nerd Font
theme = light:Adwaita,dark:Adwaita Dark

# Configurations
maximize = true
bell-features = no-system,no-audio,attention,no-title,no-border

# NOTE: Disabling because I don't know how I feel about these features yet.
# They're just annoying at the moment.
shell-integration = none 
gtk-single-instance = false

# Keymaps
keybind = ctrl+alt+-=new_split:down
keybind = ctrl+alt+\=new_split:right

keybind = ctrl+alt+k=goto_split:up
keybind = ctrl+alt+j=goto_split:down
keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+l=goto_split:right

# NOTE: Ghostty currently doesn't support moving splits but if they did, it'd
